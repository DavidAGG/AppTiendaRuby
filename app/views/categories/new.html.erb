<%= turbo_frame_tag "modal" do %>
  <div data-controller="modal">
    <div data-action="click->modal#close" class="fixed z-10 w-full h-full top-0 left-0 bg-black bg-opacity-40"></div>
      <div data-modal-target="sidebar" class="fixed top-0 right-0 z-20 w-2/3 sm:w-3/6 lg:w-2/6 h-full bg-gray-100 overflow-y-scroll shadow flex flex-col ease-in-out duration-300 translate-x-full">
        <div class=" bg-purple-500">
          <p class="cursor-pointer m-2 imageIcons" data-action="click->modal#close"><%= image_tag 'icons/back.svg', width:25, height:25%></p>
        </div>
        
        <!--HACE REFERENCIA AL ARCHIVO '_form'-->
        <div class="bg-white rounded-xl lg:my-8 lg:mx-10 sm:my-4 sm:mx-5 my-2 mx-5">
          <h2 class="text-center lg:text-lg font-bold text-white bg-purple-500 rounded-t-xl sm:py-2">Nueva categor√≠a</h2>
          <%= render 'form', category: @category%>
        </div>
      </div>
  </div>
<% end %>