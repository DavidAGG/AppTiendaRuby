<%= turbo_frame_tag "modal" do %>
    <div data-controller="modal">
        <div data-action="click->modal#close" class="fixed z-10 w-full h-full top-0 left-0 bg-black bg-opacity-40"></div>
        <div data-modal-target="sidebar" class="fixed top-0 right-0 z-20 w-2/3 sm:w-3/6 lg:w-2/6 h-full bg-white overflow-y-scroll shadow flex flex-col ease-in-out duration-300 p-5 translate-x-full">
            <p class="cursor-pointer mb-4" data-action="click->modal#close">❌</p>
            <h2>Editar categoría</h2>
            <!--HACE REFERENCIA AL ARCHIVO '_form'-->
            <%= render 'form', category: @category%>
        </div>
    </div>
<% end %>
